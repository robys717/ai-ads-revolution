services:
  - type: web
    name: ai-ads-revolution-api
    env: node
    plan: pro
    region: frankfurt
    branch: main
    buildCommand: "npm ci || npm install"
    startCommand: "node server/index.js"
    autoDeploy: true
    healthCheckPath: "/api/metrics"
    envVars:
      - key: NODE_VERSION
        value: 20
      - key: PORT
        value: 8080
      - key: DB_FILE
        value: /data/data.db
      - key: JWT_SECRET
        value: CHANGEME_reallyRandom_64chars_goes_here
      - key: CURRENCY
        value: eur
      - key: BASE_URL
        value: https://api.aiadsrevolution.com
    disks:
      - name: data
        mountPath: /data
        sizeGB: 1

staticSites:
  - name: ai-ads-revolution-static
    branch: main
    buildCommand: "echo 'no build'"
    staticPublishPath: "public"
